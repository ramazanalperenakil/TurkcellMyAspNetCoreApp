
@{
    ViewData["Title"] = "Pages";
}

<h1>Pages</h1>
<h1>Page : @ViewBag.page</h1>
<h1>PageSize : @ViewBag.pageSize</h1>
@model List<ProductViewModel>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Renk</th>
            <th>Açıklama</th>


            <th>Satış Süresi</th>
            <th>Yayın Durumu</th>
            <th>İşlem</th>
            <th>İşlem</th>
            <th>detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td>
                    @if (@item.Description.Length <= 20)
                    {
                        @item.Description.Length
                    }
                    else
                    {
                        @item.Description.Substring(0,20) <label>...</label>
                    }

                </td>
                <td>@item.Expire Ay</td>
                <td>
                    @if (@item.IsPublish)
                    {
                        <label>evet</label>

                    }
                    else
                    {
                        <label>hayır</label>

                    }
                </td>


                <td>
                    <a asp-controller="products" asp-action="remove" asp-route-id="@item.Id">Sil</a>
                </td>
                <td>  <a asp-controller="products" asp-action="update" asp-route-id="@item.Id">Güncelle</a> </td>
                <td>  <a asp-controller="Products" asp-action="GetById" asp-route-id="@item.Id">Detay</a></td>


            </tr>
        }
    </tbody>


</table>