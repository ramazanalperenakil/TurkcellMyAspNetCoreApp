@{
    ViewData["Title"] = "Update";
}

@model ProductViewModel

<form asp-controller="Products" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" /><br />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Example textarea</label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ürün Fiyatı</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Ürün Stok</label>
        <input asp-for="Stock" class="form-control">
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Color" class="form-label">Ürün Renk</label>
        <select asp-for="Color" asp-items="@ViewBag.ColorSelect">
            <option value="">Seçiniz</option>
        </select>
        @* <input asp-for="Color" class="form-control">*@
    </div>

    <div class="form-control form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" asp-for="IsPublish">
            Yayın Durumu
        </label>
    </div>
    <div class="mb-3 mt-3">
        <label>Satş Süresi</label>
        @foreach (var item in ViewBag.Expire as Dictionary<string, int>)
        {
            <div class="form-check">
                @if (item.Value == ViewBag.ExpireValue)
                {
                <input checked class="form-check-input" type="radio" asp-for="Expire" id="(@item.Value)Expire" value="@item.Value">

                }
                else
                {
                <input class="form-check-input" type="radio" asp-for="Expire" id="(@item.Value)Expire" value="@item.Value">

                }
                <label class="form-check-label" for="(@item.Value)Expire">
                    @item.Key
                </label>
            </div>



        }
        <span asp-validation-for="Expire" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Yayınlanma Tarihi</label>
        <input asp-for="PublishDate" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>

</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}